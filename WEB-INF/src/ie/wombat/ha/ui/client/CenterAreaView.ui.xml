<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>

<ui:style>
  .detail {
    border: 1px solid #666;
    background-color: white;
  }

  .header {
    background: #eee;
    border-bottom: 1px solid #666;
    padding: 0.5em;
  }

  .headerItem {
    margin-bottom:0.5em;
  }

  .body {
    line-height: 150%;
    padding: 20px 40px 20px 10px;
    font-family: 'Times New Roman', Times, serif;
  }

.uploadBox {margin:10px;padding:10px;border:1px solid #ccc;border-radius:5px;}  
</ui:style>

<!--
<ui:image field="uploadIcon" src="database_go.png" />
-->

  <g:DockLayoutPanel unit='EM' styleName='{style.detail}' ui:field="dockLayout">
    <g:north size='4'>
      <g:HTMLPanel styleName='{style.header}'>
      	<div class='{style.headerItem}'><b><span ui:field='title' /></b></div>
      	<div class='{style.headerItem}'><span ui:field='line0'/></div>
        <div class='{style.headerItem}'><span ui:field='line1'/></div>
      </g:HTMLPanel>
    </g:north>

	<!--
		Center and East panels added programatically to facilitate optional 
		inclusion of East panel.
